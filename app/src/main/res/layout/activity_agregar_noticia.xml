<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollAgregarNoticia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F1FA">

    <LinearLayout
        android:id="@+id/llAgregarNoticia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imgLogoAgregarNoticia"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/gokuicon"
            android:contentDescription="Logo Goku"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvTituloAgregarNoticia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Nueva Noticia"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#5E35B1"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/edtTituloNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título de la noticia"
            android:background="#FFFFFF"
            android:padding="14dp"
            android:inputType="textCapSentences"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtDescripcionNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción completa"
            android:background="#FFFFFF"
            android:padding="14dp"
            android:inputType="textMultiLine"
            android:lines="4"
            android:gravity="top"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnGuardarNoticia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GUARDAR NOTICIA"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5E35B1"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnVolverNoticias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7C4DFF"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
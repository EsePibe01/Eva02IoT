<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootInicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F1FA"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:ignore="HardcodedText,Autofill,TextFields,ContentDescription,ButtonStyle">

    <ImageView
        android:id="@+id/imgLogoInicio"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/gokuicon"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvTituloInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#7C4DFF"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="RUT o Correo"
        android:inputType="text"
        android:background="#FFFFFF"
        android:textColor="#263238"
        android:textColorHint="#607D8B"
        android:padding="14dp"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:background="#FFFFFF"
        android:textColor="#263238"
        android:textColorHint="#607D8B"
        android:padding="14dp"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR SESIÓN"
        android:textColor="#FFFFFF"
        android:backgroundTint="#5E35B1"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnGoRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRARSE"
        android:textColor="#FFFFFF"
        android:backgroundTint="#5E35B1"
        android:layout_marginTop="12dp"/>

    <Button
        android:id="@+id/btnGoRecuperar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RECUPERAR CLAVE"
        android:textColor="#FFFFFF"
        android:backgroundTint="#5E35B1"
        android:layout_marginTop="12dp"/>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRecuperar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F1FA">

    <LinearLayout
        android:id="@+id/llRecuperar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- LOGO DE GOKU -->
        <ImageView
            android:id="@+id/imgLogoRec"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/gokuicon"
            android:contentDescription="Logo Goku"
            android:layout_marginBottom="16dp"/>

        <!-- TÍTULO -->
        <TextView
            android:id="@+id/tvTituloRecuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar Clave"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#7C4DFF"
            android:layout_marginBottom="20dp"/>

        <!-- CAMPOS DE TEXTO -->
        <EditText
            android:id="@+id/edtNombreRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:background="#FFFFFF"
            android:padding="14dp"/>

        <EditText
            android:id="@+id/edtApellidoRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:background="#FFFFFF"
            android:padding="14dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtCorreoRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:background="#FFFFFF"
            android:padding="14dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/edtRutRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="RUT"
            android:background="#FFFFFF"
            android:padding="14dp"
            android:layout_marginTop="10dp"/>

        <!-- BOTÓN RECUPERAR -->
        <Button
            android:id="@+id/btnRecuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECUPERAR CLAVE"
            android:textColor="#FFFFFF"
            android:backgroundTint="#5E35B1"
            android:layout_marginTop="20dp"/>

        <!-- BOTÓN VOLVER -->
        <Button
            android:id="@+id/btnVolverInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver al inicio"
            android:textColor="#FFFFFF"
            android:backgroundTint="#7C4DFF"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>

